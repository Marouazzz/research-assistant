{
  "manifest_version": 3,
  "name": "Research Assistant",
  "version": "1.0",
  "description": "AI powered research assistant for web browsing.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel"
  ],
  "action": {
    "default_title": "Research Assistant",
    "default_icon": {
      "16": "logo.png"}
  },
  "side_panel": {
  "default_path": "sidepanel.html"
},
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost:8080/*",
    "<all_urls>"
  ],
  "content_security_policy": {
  "extension_pages": "script-src 'self' http://localhost:8080; object-src 'self';"
}

  }
